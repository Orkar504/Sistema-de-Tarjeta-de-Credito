@page
@model Sistema_de_Tarjeta_de_Credito.Pages.Solicitud_de_TarjetaModel
@{
}

<divclass class="text-center">
    <h1 class="display 4">Solicitud de Tarjeta de Crédito</h1>
 

    
</divclass>
<div >
    <!--Forma para la tabla persona-->
    <div class=" container">
        <form class="form-inline needs-validation" method="POST" novalidate>
            <p class="fs-1 text-center"> Datos Personales</p>
            <div class="mb-3">
                <label for="pNombre" class="form-label">Primer Nombre</label>
                <input class="form-control form-control-lg" type="text" placeholder="Primer Nombre"
                       aria-label="Contenedor de primer nombre" id="pNombre" required>
                <div class="invalid-feedback">
                    Este campo es obligatorio
                </div>
            </div>

            <div class="mb-3">
                <label for="sNombre" class="form-label">Segundo Nombre</label>
                <input class="form-control form-control-lg" type="text" placeholder="Segundo Nombre"
                       aria-label="Contenedor de segundo nombre" id="sNombre" required>
                <div class="invalid-feedback">
                    Este campo es obligatorio
                </div>
            </div>

            <div class="mb-3">
                <label for="pApellido" class="form-label">Primer Nombre</label>
                <input class="form-control form-control-lg" type="text" placeholder="Primer Apellido"
                       aria-label="Contenedor de primer apellido" id="pApellido" required>
                <div class="invalid-feedback">
                    Este campo es obligatorio
                </div>
            </div>

            <div class="mb-3">
                <label for="sApellido" class="form-label">Segundo Nombre</label>
                <input class="form-control form-control-lg" type="text" placeholder="Segundo Apellido"
                       aria-label="Contenedor de segundo Apellido" id="sApellido"required>
                <div class="invalid-feedback">
                    Este campo es obligatorio
                </div>
            </div>

            <!-- comentar -->
            <div class="mb-3">
                <label for="Document-Selector" class="form-label">Tipo de documentode Identificación</label>
                <select class="form-select" aria-label="Tipo de identificación" id="Document-Selector"required>
                    <!--  <option selected> Seleccione el tipo de identificación</option> -->
                    <option value="2" id="ID" name="ID">Identificación Nacional</option>
                    <option value="1" id="Pasaporte" name="pasaporte">Pasaporte</option>
                    <option value="3" id=" RTN" name="RTN">RTN</option>
                </select>
                <div class="invalid-feedback">
                    Este campo es obligatorio
                </div>

           
            </div>

            <div class="mb-3">
                <label for="fecha-nacimiento" class="form-label">Fecha de Nacimiento</label>
                <input class="form-control form-control-lg" type="text" placeholder="2023-10-31"
                       aria-label="Contenedor de fecha de nacimiento" id="fecha-nacimiento">
                <div class="invalid-feedback">
                    Este campo es obligatorio
                </div>
            </div>
            <div class="mb-3">
                <label for="pNombre" class="form-label">Correo Electrónico</label>
                <input class="form-control form-control-lg" type="email" placeholder="nombre@dominio.com"
                       aria-label="Contenedor del correo electrónico" id="pNombre" required>
                <div class="invalid-feedback">
                    Este campo es obligatorio
                </div>
            </div>

            <p class="fs-1 ">Datos-de-Dirección</p>

            <div class="mb-3">
                <label for="calle" class="form-label">Calle</label>
                <input class="form-control form-control-lg" type="text" placeholder="calle las rosas"
                       aria-label="Contenedor de el nombre de la calle" id="calle" required>
                <div class="invalid-feedback">
                    Este campo es obligatorio
                </div>
            </div>

            <div class="mb-3">
                <label for="avenida" class="form-label">Avenida</label>
                <input class="form-control form-control-lg" type="text" placeholder="primera avenida"
                       aria-label="Nombre de la avenida" id="avenida" required>
                <div class="invalid-feedback">
                    Este campo es obligatorio
                </div>
            </div>

            <div class="mb-3">
                <label for="referencia" class="form-label">Referencia Geográfica</label>
                <textarea class="form-control form-control-lg" type="text" placeholder="detras de un arbol de mangos junto a la catedral"
                       aria-label="Referencia Geográfica" id="referencia" required></textarea>
                <div class="invalid-feedback">
                    Este campo es obligatorio
                </div>
            </div>

            <div class="mb-3">
                <label for="numeroVivienda" class="form-label">número de vivienda/Apartamento</label>
                <input class="form-control form-control-lg" type="text" placeholder="numero de vivienda"
                       aria-label="número de vivienda" id="númeroVivienda" required>
                <div class="invalid-feedback">
                    Este campo es obligatorio
                </div>
            </div>


            <!-- Selección de Pais -->
            <div class="mb-3">
                <label for="Country-Selector" class="form-label">País</label>
                <select class="form-select" aria-label="Tipo de identificación" id="Country-Selector" required>
                    <!--  <option selected> Seleccione el tipo de identificación</option> -->
                    <option value="2" id="HN" name="ID">Honduras</option>
                    <option value="1" id="MX" name="pasaporte">Estados Unidos Mexicanos</option>
                    <option value="3" id="USA" name="RTN">Estados Unidos de América</option>
                </select>
                <div class="invalid-feedback">
                    Este campo es obligatorio
                </div>

            </div>

            <div class="mb-3">
                <label for="City-Selector" class="form-label">Ciudad</label>

            </div>



            <div class="form-group row">
                <div class="col-2">
                    <input type="submit" class=" btn btn-primary" value="Login" />
                </div>
            </div>
        </form>

    </div>



</div>
