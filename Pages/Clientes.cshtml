@page
@model Sistema_de_Tarjeta_de_Credito.Pages.Pages_Clientes
@{
    ViewData["Title"] = "Clientes";
}


    <div class="container">
        <div class="mb-4">
            <h1 class="mt-4 mb-4">Lista de Clientes</h1>
            <button class="btn btn-success">Agregar</button>
            <button class="btn btn-danger">Eliminar</button>
            <button class="btn btn-primary">Actualizar</button>
            <button class="btn btn-secondary">Imprimir</button>
        </div>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nombre Completo Cliente</th>
                        <th>Telefono</th>
                        <th>Nombre Departamento</th>
                        <th>Nombre Ciudad</th>
                        <th>Nombre Pais</th>
                        <th>Número de Cuenta</th>
                        <th>Numero de Tarjeta</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="col-sm-2">
                            <a class="btn btn-primary" asp-page="./Datos_Clientes"> Ver Datos Completos</a>
                        </td>
                    </tr>
                    <!-- Aquí puedes generar dinámicamente las filas de la tabla con datos de la base de datos -->
                    <!-- Utiliza un lenguaje de programación en el backend para obtener y procesar los datos -->
                </tbody>
            </table>
        </div>
    </div>

