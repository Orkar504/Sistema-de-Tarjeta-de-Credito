@page
@model Sistema_de_Tarjeta_de_Credito.Pages.Pages_Clientes
@{
    ViewData["Title"] = "Clientes";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vista de Clientes</title>
    <!-- Agrega los enlaces a las hojas de estilo de Bootstrap y tu archivo de estilos personalizado -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container">
        <div class="mb-4">
            <h1 class="mt-4 mb-4">Lista de Clientes</h1>
            <button class="btn btn-success">Agregar</button>
            <button class="btn btn-danger">Eliminar</button>
            <button class="btn btn-primary">Actualizar</button>
            <button class="btn btn-secondary">Imprimir</button>
        </div>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nombre Completo Cliente</th>
                        <th>Telefono</th>
                        <th>Nombre Departamento</th>
                        <th>Nombre Ciudad</th>
                        <th>Nombre Pais</th>
                        <th>Número de Cuenta</th>
                        <th>Numero de Tarjeta</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Aquí puedes generar dinámicamente las filas de la tabla con datos de la base de datos -->
                    <!-- Utiliza un lenguaje de programación en el backend para obtener y procesar los datos -->
                </tbody>
            </table>
        </div>
    </div>
    <!-- Agrega tus scripts al final del archivo -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

