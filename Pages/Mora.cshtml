@page
@model Sistema_de_Tarjeta_de_Credito.Pages.Index1Model
@{
    ViewData["Title"] = "Mora";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consulta de Moras</title>
    <!-- Enlace al archivo de estilos de Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            padding: 20px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Sistema de Moras</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Inicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Agregar Mora</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Imprimir Moras</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <h1 class="mt-4 mb-4">Consulta de Moras</h1>
        <div class="mb-4">
            <button id="btnAdd" class="btn btn-success mr-2">Agregar</button>
            <button id="btnRefresh" class="btn btn-primary mr-2">Actualizar</button>
            <button id="btnPrint" class="btn btn-info">Imprimir</button>
        </div>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id Mora</th>
                        <th>Fecha</th>
                        <th>Meses</th>
                        <th>Monto Adecuado</th>
                        <th>Nombre Completo Cliente</th>
                        <th>Atrasado</th>
                        <th>Al corriente</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody id="morasData">
                   // <!-- Datos de moras se cargarán aquí -->
                </tbody>
            </table>
        </div>
    </div>

    <!-- Los enlace al archivo de scripts de Bootstrap y jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
